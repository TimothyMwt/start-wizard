{
  "name": "start-wizard",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "npm run build -w @timothymwt/start-wizard-core && npm run build -w @timothymwt/start-wizard-next && npm run build -w @timothymwt/start-wizard-expo && npm run build -w @timothymwt/start-wizard-cli",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "check:format": "prettier --check .",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "release": "npm run lint && npm run typecheck && npm run build && npm test && changeset publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@changesets/cli": "^2.28.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "globals": "^16.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}
